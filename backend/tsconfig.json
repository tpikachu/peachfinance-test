{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "src/testutils/**/*"],
  "lib": ["es2015"]
}
